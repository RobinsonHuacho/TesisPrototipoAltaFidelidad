<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context="com.example.usuario.pruebas.AnadirDetalleCompra">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="horizontal"
        >

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Pantalla"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintHorizontal_bias="1.0">

        <ImageButton
            android:id="@+id/btnHabiltarTTSSTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_enable_accesibilidad"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:contentDescription="Botón para volver a repetir la lectura de pantalla"
            />

        <ImageButton
            android:id="@+id/btnDeshabiltarTTSSTT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_disable_accesibilidad"
            android:contentDescription="Botón para deshabilitar lectura de pantalla"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:text="INGRESE LA CANTIDAD DE PRODUCTO QUE DESEA SOLICITAR:"
            android:textColor="@color/mpsdk_dark_font_color"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />


        <com.github.snowdream.android.widget.SmartImageView
            android:id="@+id/ImageView_Foto"
            android:layout_width="0dp"
            android:layout_height="170dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PRECIO UNITARIO: $"
            android:textColor="@color/mpsdk_dark_font_color"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/TextView_PrecioProducto"
            android:layout_marginLeft="34dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="34dp" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="NOMBRE PRODUCTO:"
            android:textColor="@color/mpsdk_dark_font_color"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginLeft="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toBottomOf="@+id/ImageView_Foto"
            android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/TextView_PrecioProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PRECIO UNITARIO"
        android:textColor="@color/mpsdk_dark_font_color"
        android:textSize="18sp"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView11"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TextView_NombreProducto" />

    <TextView
        android:id="@+id/TextView_NombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NOMBRE PRODUCTO"
        android:textColor="@color/mpsdk_dark_font_color"
        android:textSize="18sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent" />



    <TextView
        android:id="@+id/textView10"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="CANTIDAD:"
        android:textColor="@color/mpsdk_dark_font_color"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        android:layout_marginLeft="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="34dp" />


        <EditText
            android:id="@+id/Label_SaldoCompra"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/mpsdk_dark_font_color"
            android:textSize="24sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/buttonDisminuir"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:text="1" />



    <Button
        android:id="@+id/buttonIncrementar"
        style="@android:style/Widget.Button"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textColor="@color/mpsdk_white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:background="@drawable/border_button"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonDisminuir"
        app:layout_constraintLeft_toRightOf="@+id/buttonDisminuir"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp" />

        <Button
            android:id="@+id/buttonDisminuir"
            style="@android:style/Widget.Button"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@drawable/border_button"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintLeft_toRightOf="@+id/Label_SaldoCompra"
            android:textColor="@color/mpsdk_white"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:text="SUBTOTAL: $"
            android:textColor="@color/mpsdk_dark_font_color"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="34dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/TextView_Subtotal" />

        <TextView
            android:id="@+id/TextView_Subtotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SUBTOTAL"
            android:textColor="@color/mpsdk_dark_font_color"
            android:textSize="18sp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonIncrementar"
            android:layout_marginRight="32dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/textView12"
            android:layout_marginLeft="24dp"
            app:layout_constraintHorizontal_bias="0.431"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="32dp" />

    <Button
        android:id="@+id/buttonAnadir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="makeRequestInsertarProducto"
        android:text="AÑADIR"
        android:textSize="18dp"
        android:background="@drawable/border_button"
        android:textColor="@color/mpsdk_white"
        android:padding="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonCancelar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonCancelar"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:foregroundGravity="bottom"/>

    <Button
        android:id="@+id/buttonCancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="volverCatalogo"
        android:text="VOLVER"
        android:textSize="18dp"
        android:background="@drawable/border_button"
        android:textColor="@color/mpsdk_white"
        android:padding="10dp"
        app:layout_constraintLeft_toRightOf="@+id/buttonAnadir"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="85dp"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="92dp"
        android:foregroundGravity="bottom"
        app:layout_constraintTop_toBottomOf="@+id/TextView_Subtotal"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/zoomIn"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@android:drawable/btn_plus"
        app:layout_constraintLeft_toRightOf="@+id/zoomOut"
        android:background="@drawable/border_image_button"
        android:contentDescription="Botón para aumentar el tamaño de letra"
        />

    <ImageButton
        android:id="@+id/zoomOut"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@android:drawable/btn_minus"
        app:layout_constraintRight_toLeftOf="@+id/zoomIn"
        app:layout_constraintHorizontal_bias="0.6"
        android:background="@drawable/border_image_button"
        android:contentDescription="Botón para disminuir el tamaño de letra"
        />


    </android.support.constraint.ConstraintLayout>
