<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuario.pruebas.Donacion"
    android:background="@color/mpsdk_white">

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="POR FAVOR INGRESE LOS DATOS DE SU TARJETA DE CRÉDITO"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:textColor="@color/mpsdk_dark_font_color"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <TextView
    style="@style/mpsdk_form_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="@string/mpsdk_card_number_label"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        android:id="@+id/MPTextView2"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />


    <EditText
        android:id="@+id/EditText_NumeroTarjeta"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="5dp"
        android:hint="XXXX-XXXX-XXXX-XXXX"
        android:inputType="number"
        android:maxLength="16"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MPTextView2" />

                        <TextView
                            android:id="@+id/TextView_CodigoSeguridad"
                            style="@style/mpsdk_form_label"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mpsdk_security_code"
                            android:layout_marginRight="24dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="24dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/EditText_NumeroTarjeta" />

    <EditText
        android:id="@+id/EditText_CodigoSeguridad"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:hint="XXX"
        android:inputType="number"
        android:maxLength="4"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextView_CodigoSeguridad" />

                        <TextView
                            android:id="@+id/TextView_FechaExpiracion"
                            style="@style/mpsdk_form_label"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mpsdk_card_expire_date_label"
                            android:layout_marginRight="24dp"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginLeft="24dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/EditText_CodigoSeguridad" />



                            <EditText
                                android:id="@+id/EditText_MesExpiracion"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="2"
                                android:layout_marginTop="5dp"
                                app:layout_constraintTop_toBottomOf="@+id/TextView_FechaExpiracion"
                                android:layout_marginLeft="24dp"
                                android:padding="10dp"
                                app:layout_constraintLeft_toLeftOf="parent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="/"
                                android:id="@+id/TextView"
                                app:layout_constraintLeft_toRightOf="@+id/EditText_MesExpiracion"
                                android:layout_marginLeft="8dp"
                                app:layout_constraintBaseline_toBaselineOf="@+id/EditText_MesExpiracion" />

                            <EditText
                                android:id="@+id/EditText_AnioExpiracion"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLength="2"
                                android:layout_marginLeft="8dp"
                                android:padding="10dp"
                                app:layout_constraintLeft_toRightOf="@+id/TextView"
                                app:layout_constraintBaseline_toBaselineOf="@+id/TextView" />


    <TextView
        android:id="@+id/TextView_Monto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monto"
        style="@style/mpsdk_form_label"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/EditText_MesExpiracion" />

    <EditText
        android:id="@+id/EditText_Monto"
        style="@style/mpsdk_form_input"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@+id/TextView_Monto$"
        android:layout_marginLeft="8dp"
        android:padding="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/TextView_Monto$" />

    <TextView
        android:id="@+id/TextView_Monto$"
        style="@style/mpsdk_form_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/TextView_Monto" />


    <Button
        android:id="@+id/Btn_Continuar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/mpsdk_margin_std"
        android:layout_marginBottom="24dp"
                    android:layout_marginLeft="10dp"
                    android:onClick="makeRequestInsertarDonacion"
                    android:text="CONFIRMAR DONACIÓN"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/EditText_Monto" />

                <Button
                    android:id="@+id/Btn_Regresar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/mpsdk_margin_std"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:onClick="volverCatalogo"
                    android:text="REGRESAR"
                    app:layout_constraintBaseline_toBaselineOf="@+id/Btn_Continuar"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintLeft_toRightOf="@+id/Btn_Continuar"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp" />





</android.support.constraint.ConstraintLayout>
