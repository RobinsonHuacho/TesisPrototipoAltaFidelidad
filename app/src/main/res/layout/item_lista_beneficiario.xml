<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:background="?attr/selectableItemBackground"
      android:paddingTop="8dp">

    <com.github.snowdream.android.widget.SmartImageView
        android:id="@+id/ImageView_Foto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/TextView_Nombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="Nombres"
        android:textAppearance="?attr/textAppearanceListItem"
         />

    <TextView
        android:id="@+id/Label_TotalCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_Nombres"
        android:layout_below="@+id/TextView_Nombres"
        android:text="Total Compra : $ "
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceListItem"
        />

    <TextView
        android:id="@+id/Label_SaldoCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_Nombres"
        android:layout_below="@+id/Label_TotalCompra"
        android:text="Saldo : $ "
        android:textStyle="bold"
        android:textAppearance="?attr/textAppearanceListItem"
        />


    <TextView
        android:id="@+id/TextView_TotalCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Compra"
        android:layout_alignBaseline="@+id/Label_TotalCompra"
        android:layout_alignBottom="@+id/Label_TotalCompra"
        android:layout_toRightOf="@+id/Label_TotalCompra"
        android:layout_toEndOf="@+id/Label_TotalCompra"
        android:textAppearance="?attr/textAppearanceListItem"
        />

    <TextView
        android:id="@+id/TextView_SaldoCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Label_SaldoCompra"
        android:layout_alignBottom="@+id/Label_SaldoCompra"
        android:layout_toEndOf="@+id/Label_SaldoCompra"
        android:layout_toRightOf="@+id/Label_SaldoCompra"
        android:text="Saldo"
        android:textAppearance="?attr/textAppearanceListItem" />

</RelativeLayout>